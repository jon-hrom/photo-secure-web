{
  "tests": [
    {
      "name": "OPTIONS for CORS preflight",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "List plans without auth",
      "method": "GET",
      "path": "/?action=plans",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "List plans as admin",
      "method": "GET",
      "path": "/?action=plans",
      "headers": {
        "X-User-Id": "1"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "plans": "array"
      },
      "bodyMatcher": "partial"
    }
  ]
}